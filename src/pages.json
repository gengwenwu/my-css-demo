			}
		},
		{
			"path": "pages/flex/basic/flex-item-flex",
			"style": {
				"navigationBarTitleText": "item子项 - flex属性"
			}
		},
		{
			"path": "pages/flex/basic/flex-item-align-self",
			"style": {
				"navigationBarTitleText": "item子项 - align-self属性"
			}
		},
		{
			"path": "pages/flex/basic/flex-item-order",
			"style": {
				"navigationBarTitleText": "item子项 - order属性"
			}
		},
		{
			"path": "pages/flex/travel/index",
